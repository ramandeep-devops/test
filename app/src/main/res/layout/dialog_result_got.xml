<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/back_filled_white_rounded_corner"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:paddingBottom="12dp"
    android:layout_gravity="center"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvResultGotHeading"
        style="@style/CommonBoldHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="@string/what_result_did_you_get_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResultGot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        tools:listitem="@layout/item_result_got"
        tools:itemCount="5"
        />

    <Button
        android:id="@+id/btnResultGotContinue"
        style="@style/FullRoundedAccentColorButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="@string/continue_label_details_page"
        android:textSize="12sp"
        />

</LinearLayout>