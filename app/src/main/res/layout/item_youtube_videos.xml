<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:elevation="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_filled_white_rounded_corner"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivItemVideo"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp"
            android:src="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/tvItemVideoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="12dp"
            android:paddingStart="0dp"
            android:drawableEnd="@drawable/ic_arrow_right"
            tools:text="Bienvenido a ENCOBER"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"
            android:fontFamily="@font/circular_std_bold"
            />

        <TextView
            android:id="@+id/tvItemVideoDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="4dp"
            tools:text="Las 8 reglas que los despechos de cobranzadeben cumplir, con el objetivo de que el gestor as 8 reglas que los despechos de cobranzadeben cumplir, con el objetivo de que el g"
            android:textColor="@color/main_text_color"
            android:maxLines="2"
            android:ellipsize="end"
            android:alpha="0.7"
            android:textSize="14sp"
            android:fontFamily="@font/circular_std_bold"
            />
    </LinearLayout>
</RelativeLayout>