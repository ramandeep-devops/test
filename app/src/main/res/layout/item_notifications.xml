<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <ImageView
        android:id="@+id/ivNotificationIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_check_green"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/cdesc_notification_icon" />
    <TextView
        android:id="@+id/tvNotificationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/main_text_color"
        android:text="It's time to connect, remember that the schedule is from 7 to 22 hrs."
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/ivNotificationIcon"
        />
    <TextView
        android:id="@+id/tvNotificationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 min ago"
        android:textColor="@color/main_text_color"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:alpha="0.6"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvNotificationText"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.1"
        android:layout_below="@id/tvNotificationTime"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>