<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:paddingBottom="8dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvAdItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_extra_income_label_adscreen"
        android:fontFamily="@font/circular_std_book"
        android:textSize="30sp"
        android:layout_marginStart="24dp"
        android:textColor="@color/main_text_color"
        />

    <ImageView
        android:id="@+id/ivBackAdItem"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_below="@id/tvAdItem"
        android:src="@drawable/img_ad_background"
        android:scaleType="centerCrop"
        android:layout_marginTop="64dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivAdItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvAdItem"
        android:src="@drawable/img_encober_ad_1"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/cdesc_ad_image" />
</RelativeLayout>