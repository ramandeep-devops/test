<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/back_filled_white_rounded_corner"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="24dp"
    android:paddingEnd="12dp"
    android:paddingBottom="24dp">


    <TextView
        android:id="@+id/tvMeetOtherHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/circular_std_bold"
        android:gravity="center"
        android:textColor="@color/main_text_color"
        android:textSize="18sp"
        android:text="@string/reagendered_visit_label" />

    <TextView
        android:id="@+id/tvMeetOtherSubHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/circular_std_book"
        android:gravity="center"
        android:textColor="@color/main_text_color"
        android:alpha="0.9"
        android:textSize="16sp"
        android:text="@string/meet_other_dialog_subheading"
        />

    <Button
        android:id="@+id/btnMeetOtherContinue"
        style="@style/FullRoundedAccentColorButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="@string/it_is_understood_label"
        android:textSize="12sp"
        />

</LinearLayout>