<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>



    <style name="FullScreenDialogFragment" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>



    <style name="FullWidthDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="LoadingDialog">    
        <item name="android:windowFrame">@null</item>   
        <item name="android:windowBackground">@android:color/transparent</item>   
        <item name="android:windowIsFloating">true</item>   
        <item name="android:windowContentOverlay">@null</item>    
        <item name="android:windowTitleStyle">@null</item>    
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>  
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>  
        <item name="android:backgroundDimEnabled">true</item>   
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LoginTextView">
        <item name="android:textColor">@color/text_color_above_edittext</item>
        <item name="android:alpha">0.6</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.14</item>
    </style>


    <style name="LoginEditTextYellowTheme">
    <item name="colorControlNormal">@color/normal_edittext_line_color</item>
    <item name="colorControlActivated">@color/active_edittext_line_color</item>
    <item name="colorControlHighlight">@color/active_edittext_line_color</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">100</item>
        <item name="android:fontFamily">@font/circular_std_book</item>
        <item name="android:lineSpacingMultiplier">1.50</item>

    </style>

    <style name="BlueGradientButton">
        <item name="android:background">@drawable/gradient_blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>


    <style name="FullRoundedAccentColorButton">
        <item name="android:background">@drawable/back_filled_accent_full_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="CommonBoldHeading">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
    </style>



    <style name="AccentColorBorderButton">
        <item name="android:background">@drawable/back_accent_color_border</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>

    <style name="MainTabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="trackTint">@color/switch_track_tint</item>
    </style>

    <style name="HomeTopRadioButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/selector_home_top_buttons</item>
        <item name="android:fontFamily">@font/circular_std_book</item>
        <item name="android:textColor">@color/home_top_radio_button_text_color</item>
    </style>



</resources>
